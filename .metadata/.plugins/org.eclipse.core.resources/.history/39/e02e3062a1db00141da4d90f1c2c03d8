build:
	javac -classpath lib/zookeeper-3.3.2.jar:lib/log4j-1.2.15.jar \
	ZkConnector.java \
	Test.java \
	JobTracker.java \
	JobTrackerClientHandle.java \
	ClientDriver.java \
	Worker.java \
	FileServer.java \
	FileServerClientHandle
runTracker:
	java -classpath lib/zookeeper-3.3.2.jar:lib/log4j-1.2.15.jar:. JobTracker localhost:8336
runTest:
	java -classpath lib/zookeeper-3.3.2.jar:lib/log4j-1.2.15.jar:. Test localhost:8336
runClient:
	java -classpath lib/zookeeper-3.3.2.jar:lib/log4j-1.2.15.jar:. ClientDriver localhost:8336
runWorker:
	java -classpath lib/zookeeper-3.3.2.jar:lib/log4j-1.2.15.jar:. Worker localhost:8336

clean:
	rm -f *.class
